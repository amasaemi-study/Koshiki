<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="#CFD8DC"
    android:paddingTop="@dimen/size_24dp">

    <ImageView
        android:id="@+id/nav_menu_header.avatar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:scaleType="centerCrop"
        android:background="@drawable/menu_nav_view_avatar"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/nav_menu_header.username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amasaemi"
        android:fontFamily="sans-serif-medium"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/animelist_nav_menu_header.status_online"
        android:layout_marginLeft="16dp"/>

</LinearLayout>