<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/animelist_parameters_find.substrate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_800_transparent"
        android:clickable="true"
        android:alpha="0"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/animelist_parameters_find.container_control_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/parameters_layout_height_350dp"
        android:paddingBottom="@dimen/padding_4dp"
        android:paddingRight="@dimen/padding_4dp"
        android:paddingTop="@dimen/padding_8dp"
        android:paddingLeft="@dimen/padding_16dp"
        android:background="#fff"
        android:translationY="-370dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/vSearchingStatus$"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:layout_above="@+id/animelist_parameters_find.searching_status"
            android:text="Статус:"/>

        <TextView
            android:id="@+id/animelist_parameters_find.searching_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/vSearchingKind$"
            android:paddingLeft="@dimen/padding_8dp"
            android:maxWidth="@dimen/size_250dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="?selectableItemBackground"
            android:gravity="center"
            android:drawableRight="@drawable/icon_dropdown"
            android:drawableTint="@color/grey_700"
            android:text="@string/animelist_finding_paramaters.status"/>

        <TextView
            android:id="@+id/vSearchingKind$"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_1dp"
            android:fontFamily="sans-serif-medium"
            android:layout_above="@+id/animelist_parameters_find.searching_kind"
            android:text="Тип:"/>

        <TextView
            android:id="@+id/animelist_parameters_find.searching_kind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/vSearchingAgeRating$"
            android:paddingLeft="@dimen/padding_8dp"
            android:maxWidth="@dimen/size_250dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="?selectableItemBackground"
            android:gravity="center"
            android:drawableRight="@drawable/icon_dropdown"
            android:drawableTint="@color/grey_700"
            android:text="@string/animelist_finding_paramaters.kind"/>

        <TextView
            android:id="@+id/vSearchingAgeRating$"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_1dp"
            android:fontFamily="sans-serif-medium"
            android:layout_above="@+id/animelist_parameters_find.searching_age_rating"
            android:text="Возрастной рейтинг:"/>

        <TextView
            android:id="@+id/animelist_parameters_find.searching_age_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/vSearchingSeason$"
            android:paddingLeft="@dimen/padding_8dp"
            android:maxWidth="@dimen/size_250dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="?selectableItemBackground"
            android:gravity="center"
            android:drawableRight="@drawable/icon_dropdown"
            android:drawableTint="@color/grey_700"
            android:text="@string/animelist_finding_paramaters.age_rating"/>

        <TextView
            android:id="@+id/vSearchingSeason$"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:fontFamily="sans-serif-medium"
            android:layout_above="@+id/animelist_parameters_find.searching_season"
            android:text="Сезон:"/>

        <TextView
            android:id="@+id/animelist_parameters_find.searching_season"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/vSearchingMyList$"
            android:paddingLeft="@dimen/padding_8dp"
            android:maxWidth="@dimen/size_250dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="?selectableItemBackground"
            android:gravity="center"
            android:drawableRight="@drawable/icon_dropdown"
            android:drawableTint="@color/grey_700"
            android:text="@string/animelist_finding_paramaters.season"/>

        <TextView
            android:id="@+id/vSearchingMyList$"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_1dp"
            android:fontFamily="sans-serif-medium"
            android:layout_above="@+id/animelist_parameters_find.searching_my_list"
            android:text="В моем списке:"/>

        <TextView
            android:id="@+id/animelist_parameters_find.searching_my_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/vSearchingGenres$"
            android:paddingLeft="@dimen/padding_8dp"
            android:maxWidth="@dimen/size_250dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="?selectableItemBackground"
            android:gravity="center"
            android:drawableRight="@drawable/icon_dropdown"
            android:drawableTint="@color/grey_700"
            android:text="@string/animelist_finding_paramaters.stat_my_list"/>

        <TextView
            android:id="@+id/vSearchingGenres$"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_1dp"
            android:fontFamily="sans-serif-medium"
            android:layout_above="@+id/animelist_parameters_find.searching_genres"
            android:text="Жанры:"/>

        <TextView
            android:id="@+id/animelist_parameters_find.searching_genres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/vSearchingSort$"
            android:paddingLeft="@dimen/padding_8dp"
            android:maxWidth="@dimen/size_250dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="?selectableItemBackground"
            android:gravity="center"
            android:drawableRight="@drawable/icon_dropdown"
            android:drawableTint="@color/grey_700"
            android:text="@string/animelist_finding_paramaters.genres"/>

        <TextView
            android:id="@+id/vSearchingSort$"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_1dp"
            android:fontFamily="sans-serif-medium"
            android:layout_above="@+id/animelist_parameters_find.searching_order"
            android:text="Сортировака:"/>

        <TextView
            android:id="@+id/animelist_parameters_find.searching_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/animelist_parameters_find.searching_search"
            android:paddingLeft="@dimen/padding_8dp"
            android:maxWidth="@dimen/size_250dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="?selectableItemBackground"
            android:gravity="center"
            android:drawableRight="@drawable/icon_dropdown"
            android:drawableTint="@color/grey_700"
            android:text="@string/animelist_finding_paramaters.order"/>

        <Button
            android:id="@+id/animelist_parameters_find.searching_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="Поиск"
            android:textColor="@color/green_900"
            style="@style/Base.Widget.AppCompat.Button.Borderless"/>
    </RelativeLayout>

    <!-- граница поискового бара. Проверить на видимость. -->
    <!--<View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_200"
        android:layout_below="@id/animelist_parameters_find.container_control_layout"/>-->
</FrameLayout>